{
  "private": false,
  "name": "use-model-validation",
  "version": "0.0.5",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/Enijar/use-model"
  },
  "description": "Store data in a model and validate that data anywhere",
  "author": "Enijar",
  "license": "MIT",
  "scripts": {
    "examples": "npx webpack-dev-server --mode development",
    "format": "npx prettier@^2.0.5 lib --write",
    "build": "npx tsc -p tsconfig.lib.json",
    "test": "npx jest",
    "test-watch": "npx jest --watchAll",
    "prepublishOnly": "npm test && npm run build"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "<rootDir>/lib/"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "preset": "ts-jest"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "devDependencies": {
    "@types/jest": "^26.0.10",
    "@types/react": "^16.9.44",
    "@types/react-dom": "^16.9.8",
    "html-webpack-plugin": "^4.3.0",
    "jest": "^26.4.2",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "ts-jest": "^26.3.0",
    "ts-loader": "^8.0.2",
    "ts-node": "^9.0.0",
    "typescript": "^3.9.7",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  }
}
